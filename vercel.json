{
  "buildCommand": "pnpm run build",
  "outputDirectory": "build/client",
  "installCommand": "pnpm install",
  "framework": "remix",
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VERCEL": "1"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
